                                        <div class="row">
                                            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                                                <fieldset class="form-group">
                                                    <label>Họ <span class="required">*</span></label>
                                                    @Html.TextBoxFor(model => model.ho, new { @class = "form-control form-control-lg", @id = "lastName", @placeholder = "Họ", @required = "", @type = "text", @name = "lastName" })

                                                </fieldset>
                                            </div>
                                            <div class="col-md-12">
                                                <fieldset class="form-group">
                                                    <label>Tên <span class="required">*</span></label>
                                                    @Html.TextBoxFor(model => model.ten, new { @class = "form-control form-control-lg", @id = "firstName", @placeholder = "Tên", @required = "", @type = "text", @name = "firstName" })

                                                </fieldset>
                                            </div>
                                            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                                                <fieldset class="form-group">
                                                    <label>Số điện thoại <span class="required">*</span></label>
                                                    @Html.TextBoxFor(model => model.sodt, new { @class = "form-control form-control-lg", @id = "Phone", @placeholder = "Số điện thoại", @required = "", @type = "text", @name = "Phone" })

                                                </fieldset>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                                                <fieldset class="form-group">
                                                    <label>Email <span class="required">*</span></label>
                                                    @Html.TextBoxFor(model => model.email, new { @class = "form-control form-control-lg", @pattern = "[a-z0-9._%+-]+[data-val-email][a-z0-9.-]+[a-z]{2,63}$", @id = "customer_email", @placeholder = "Email", @required = "", @type = "email", @autofocus = "autofocus", @name = "Email" })
                                                </fieldset>
                                            </div>
                                            <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
                                                <fieldset class="form-group">
                                                    <label>Mật khẩu <span class="required">*</span> </label>
                                                    @Html.TextBoxFor(model => model.password, new { @class = "form-control form-control-lg", @id = "customer_password", @placeholder = "Mật khẩu", @required = "", @type = "password", @name = "Password" })
                                                </fieldset>
                                            </div>
                                        </div>
                                        <div class="section margin-top-10 button_bottom">
                                            <button type="submit" value="Đăng ký" class="btn  btn-style btn_50 btn_register">Đăng ký</button>
                                            <span class="or">
                                                Bạn đã có tài khoản? Đăng nhập
                                                <a href="/TaiKhoan/login" style="text-decoration: underline;" class="btn-link-style  btn-style margin-right-0">tại đây</a>
                                            </span>
                                        </div>
                                    </div>
                                }
                                @*<form method="post" action="/account/register" id="customer_register" accept-charset="UTF-8">
                                </form>*@
                                <div class="block social-login--facebooks">
                                    <p class="a-center">
                                        Hoặc đăng nhập bằng
                                    </p>
                                    <a href="" class="social-login--facebook" onclick="loginFacebook()"><img width="129px" height="37px" alt="facebook-login-button" src="//bizweb.dktcdn.net/assets/admin/images/login/fb-btn.svg"></a>
                                    <a href="" class="social-login--google" onclick="loginGoogle()"><img width="129px" height="37px" alt="google-login-button" src="//bizweb.dktcdn.net/assets/admin/images/login/gp-btn.svg"></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

